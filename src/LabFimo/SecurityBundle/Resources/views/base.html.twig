<section>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <form action="{{ path('login_check') }}" method="post" class="form-horizontal" role="form">
                  <div class="form-group">
                    <label for="username" class="col-sm-2 control-label">UserName</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Email">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="password" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                      <input type="password" class="form-control" id="password" name="_password" placeholder="Password">
                    </div>
                  </div>
                  <div class="form-group">
                    {% if error %}
                    <div class="alert alert-danger alert-dismissible" role="alert">
                      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                      {{ error.message }}
                    </div>
                    {% endif %}
                  </div>
                  <div class="form-group">
                  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="col-sm-offset-2 col-sm-10">
                      <button type="submit" class="btn btn-default">Sign in</button>
                    </div>
                  </div>
                </form>
            </div>
        </div>
{% endblock %}